{
  "name": "never-skip-leg-day",
  "description": "Workout tracking app that helps you plan your routines so you never skip leg day again",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start -p 4000",
    "lint": "next lint",
    "format": "prettier --check --ignore-unknown .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,sass,md,mdx,html,json}": [
      "prettier --check --ignore-unknown"
    ],
    "*.{jsx,js,ts,tsx}": [
      "eslint --cache"
    ]
  },
  "dependencies": {
    "next": "^12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.42",
    "eslint": "^8.11.0",
    "eslint-config-next": "^12.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
