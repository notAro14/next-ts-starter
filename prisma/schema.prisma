generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAp DateTime @default(now()) @map("updated_at")

  authors Author[]

  @@map("book")
}

model Author {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAp  DateTime @default(now()) @map("updated_at")

  books Book[]

  @@map("author")
}
